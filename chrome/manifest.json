{
  "manifest_version": 2,

  "name": "Bitcoin Tipping Extension",
  "description": "Bitcoin Tipping Extension",
  "version": "1.0",

  "permissions": [
    "notifications"
  ],
  
  "background": {
    "scripts": ["js/background.js"]
  },
  
  "browser_action": {
    "default_icon": "img/default_icon.png",
    "default_popup": "popup.html"
  }
}